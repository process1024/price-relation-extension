{
  "name": "image-search-extension",
  "displayName": "猴子搬家助手",
  "version": "0.0.1",
  "description": "猴子搬家助手，支持一键截图、上传图片找同款比价",
  "author": "chen junyi",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "doc": "http-server ./docs -c-1 -o index.html"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-if": "^4.1.6"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "http-server": "^14.1.1",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "windows"
    ]
  }
}
